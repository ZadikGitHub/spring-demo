<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">



	<bean id="triangle" class="com.intellimed.spring_demo.Triangle">
		<!-- <property name="type" value="Equilateral" /> -->
		<constructor-arg type="java.lang.String" index="0"
			value="Equilateral" />

		<property name="points">
			<list>
				<ref bean="pointA"></ref>
				<ref bean="pointB"></ref>
				<ref bean="pointC"></ref>
			</list>

		</property>

	</bean>


	<bean id="pointA" class="com.intellimed.spring_demo.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean id="pointB" class="com.intellimed.spring_demo.Point">
		<property name="x" value="0"></property>
		<property name="y" value="20"></property>
	</bean>

	<bean id="pointC" class="com.intellimed.spring_demo.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>
</beans>